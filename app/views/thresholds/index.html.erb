<h1>Listing thresholds</h1>

<table>
  <tr>
    <th>Customer</th>
    <th>Threshold value</th>
    <th>Start date</th>
    <th>End date</th>
    <th>Active</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @thresholds.each do |threshold| %>
  <tr>
    <td><%= threshold.customer_id %></td>
    <td><%= threshold.threshold_value %></td>
    <td><%= threshold.start_date %></td>
    <td><%= threshold.end_date %></td>
    <td><%= threshold.active %></td>
    <td><%= link_to 'Show', threshold %></td>
    <td><%= link_to 'Edit', edit_threshold_path(threshold) %></td>
    <td><%= link_to 'Destroy', threshold, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

