    <b>Start Date</b><input type="text" name="start_date" value="<%=params[:start_date]%>"> (yyyy-mm-dd)<br>
    <b>End Date</b><input type="text" name="end_date" value="<%=params[:end_date]%>"> (yyyy-mm-dd)<br>
    <b>Customer Name</b><input type="text" name="customer_name" value="<%=params[:customer_name]%>">
    <input type="button" name="search" value="Search" onClick="return doSearch()">
    </form>
